<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/stylesheet.css">
    <title>Document</title>
</head>

<body class="bg-zinc-900">
    
    <div class="h-full w-full   p-10 bg-zinc-900 text-white">
        <a class="text-blue-500" href="/">Back to Home Users</a>
        <h1 class="text-3xl mt-10 tracking-tighter mb-3">All Users</h1>
        
            <div class="users  flex gap-3 flex-wrap">
                <% if(users.length>0){ %>
                    <% users.forEach(function(user){ %>
                        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                            <div class="w-full h-72 bg-zinc-700 rounded-lg overflow-hidden">
                                <img class="w-full h-full object-cover object-top" src="<%=user.image%>">
                            </div>
                            <h3 class="text-xl mt-3 tracking-tighter">
                                <%=user.name%>
                            </h3>
                            <h5 class="text-zinc-500">
                                <%=user.email%>
                            </h5>
                            <div class="flex gap-3 mt-10">
                                <a href="/edit/<%=user._id%>" class="text-zinc-600 cursor-pointer">Edit User</a>
                                <a href="/delete/<%=user._id%>" class="text-red-500 cursor-pointer">Delete User</a>
                            </div>
                        </div>
                        <% }) %>
                            <% } else{ %>
                                <h3 class="text-zinc-500"> no users yet</h3>
                                <% }%>
            
            
            
            
            </div>
        </div>
        
    </div>
</body>

</html>